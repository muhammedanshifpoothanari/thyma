<%- include('../layout/header.ejs') %>

<section class="login my-5">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <div class="col-md-6 col-lg-5 mb-4 mb-md-0">
        <div class="card">
          <div class="card-body">
            <h1 class="text-center mb-4">Login</h1>
            <form class="mx-auto" action="" method="post">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              <button type="submit" class="btn btn-primary btn-block">Sign in</button>
              <p class="text-center mt-3">Don't have an account? <a href="/test">Sign up</a></p>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-7">
        <div class="text-center">
          <h2 class="mb-4">Thyma Dates And Nuts</h2>
          <img src="/userimages/Bateel_Farm.jpeg" alt="Bateel Farm" class="img-fluid rounded-circle" style="max-width: 300px;">
        </div>
      </div>
    </div>
  </div>
</section>