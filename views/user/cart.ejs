	    				<table class="table" style="min-height: 300px;">
						    <thead class="thead-primary">
						      <tr class="text-center">
						        <th>&nbsp;cancel</th>
						        <th>&nbsp;image</th>
						        <th>Product name</th>
						        <th>Price</th>
								<th>Know More</th>
						       
						      </tr>
						    </thead>
						    <tbody>
						      <tr class="text-center">
                                <% product.forEach((products) => { %>    
                                  
						        <td class="product-remove"><form action="/cancelWish" method="post">
                      <input type="hidden" name="cartItemId" value="<%= products._id %>">
                      <button type="submit" id="cancel" style="border-radius: 100px 80px 30px 40px;width: 30px;background-color: red;"><span class="ion-ios-close" style="font-size: 30px;"></span></button>
                    </form>   </td>
						        
						        <td class="image-prod"><div class="img" style="background-image:url('/userimages/<%= products.image[0] %>')"></div></td>
						        
						        <td class="product-name">
						        	<h3><%= products.name %></h3>
						        </td>
						     
						        <td class="price"><%= products.price %></td>
								<td class="product-name">
									<div class="bottom-area d-flex px-3">
										<div class="m-auto d-flex">
											<a href="/productDetails?productId=<%= products._id %>" class="add-to-cart d-flex justify-content-center align-items-center text-center">
												<span><i class="ion-ios-menu" style="font-size: 30px;"></i></span>
											</a>
											
										</div>
									</div>
								</td>

						      
						      </tr><!-- END TR-->
                              <% }); %>
						    </tbody>
						  </table>
					  </div>
    			</div>
    		</div>
    	
			</div>
