<%- include('../layout/header.ejs') %>

<%- include('../layout/nav.ejs') %>
<div class="container mt-5" style="background-color: antiquewhite;">


    <table class="table table-borderless main">
<thead>
<tr class="head">
  <th scope="col" class="ml-2">
      
      <div class="form-check">
    

       </div>

  </th>
  <th scope="col">Order ID</th>
  <th scope="col">Customer</th>
  <th scope="col">Fullfillment</th>
  <th scope="col">Total</th>
  <th scope="col">Status</th>
  <th scope="col">Edit</th>
</tr>
</thead>
<tbody>

    <% orders.forEach(order => { %>
<tr class="rounded bg-white">
  <th scope="row">
       <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">

       </div>
  </th>
  <td class="order-color"><a href="/orderDetails?id=<%= order._id %>"><%= order._id %></a></td>
  
  
  
  <td class="d-flex align-items-center">
      <img src="https://i.imgur.com/C4egmYM.jpg" class="rounded-circle" width="25">
      <span class="ml-2"><%= order.ref %></span>
  </td>
  <td>
      <div class="dropdown">
<button class="btn btn-primary btn-sm" type="button"  >
    <li><%= order.deliveryStatus %></li>
</button>

</div>
  </td>
  <td><%= order.total %></td>
  
  <td>
       <div class="dropdown">
<button class="btn btn-primary btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
    <%= order.paymentStatus %>
</button>

</div>

<td> 
    <% if (order.deliveryStatus !== "delivered") { %>
    <form action="/cancelOrder" method="post">
        <input type="hidden" name="cartItemId" value="<%= order._id %>">
        <button type="submit" id="cancel" style="border-radius: 100px 80px 30px 40px;background-color: red; color: whitesmoke;">Cancel Order</button>
    </form>
    <% } %>
</td>

</tr>

<% }) %>
</tbody>
</table>
    

</div>
<%- include('../layout/footer.ejs') %>