<style>
	.carousel-container {
position: relative;
width: 100%;
height: 400px;
overflow: hidden;
background-color: aqua;
}

.carousel-item {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 100%;
opacity: 0;
transition: opacity 1s ease-in-out;

}

.carousel-item.active {
opacity: 1;
}

.carousel-caption {
position: absolute;
bottom: 20%;
left: 20%;
right: 20%;
color: #fff;
}

.carousel-control-prev,
.carousel-control-next {
position: absolute;
top: 50%;
transform: translateY(-50%);
width: 30px;
height: 30px;
background-color: rgba(0, 0, 0, 0.5);
border-radius: 50%;
z-index: 1;
text-align: center;
line-height: 1.5;
}

.carousel-control-prev-icon,
.carousel-control-next-icon {
display: inline-block;
font-size: 20px;
color: #fff;
}

.carousel-control-prev {
left: 20px;
}

.carousel-control-next {
right: 20px;
}
.product-show {
  position: relative;
  display: flex;
}

.product-thumbnails {
  display: flex;
  flex-wrap: wrap;
  margin-left: 10px;
}

.product-thumbnails img {
  width: 70px;
  height: 70px;
  object-fit: cover;
  margin-right: 5px;
  margin-bottom: 5px;
  cursor: pointer;
}

.product-image-container {
  width: 400px;
  height: 400px;
  overflow: hidden;
  position: relative;
}

.product-image-container img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  position: absolute;
  top: 0;
  left: 0;
  transition: transform 0.2s ease-in-out;
  cursor: zoom-in;
}

.product-image-container img:hover {
  transform: scale(1.2);
}

.product-image-container img.active {
  cursor: default;
  transform: none;
}
</style>
