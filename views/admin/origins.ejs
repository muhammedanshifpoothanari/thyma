<%- include('../layout/header.ejs') %>

<%- include('../layout/AdminNavBar.ejs') %>

 
   
   
  <section class="vh-100" style="background: linear-gradient(180deg, #f2d18472 0%, rgba(242, 209, 132, 0) 100%);
  border-radius: 0px;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black " style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
  
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4"> <h1>Origin</h1></p>
  
                  <table>
                    <thead>
                      <tr>
                        <th style="color: black;">Name</th>
                        <th style="color: black;">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% origin.forEach(category => { %>
                        <tr class="rounded bg-white border" style="margin:100px">
                          <td style="padding-right:100px;color: black;"><%= category.name %></td>
                          <td >
                            <a style="padding-right:40px;justify-content: center;"class="badge badge-success" href="/admin/editOrigin/<%= category._id %>">Edit</a>
                            <a style="padding-left:40px" class="badge badge-success" href="/admin/deleteOrigin/<%= category._id %>" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                          </td>
                        </tr>
                        
                      <% }) %>
                    </tbody>
                  </table>
                  <br>
                  <a class="btn btn-primary btn-sm" href="/admin/addOrigin">Add Category</a>
                  
                </div>
  
                   
  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<%- include('../layout/footer.ejs') %>