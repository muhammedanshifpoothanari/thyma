<%- include('../layout/adminNewHEader.ejs') %>
<!-- ======= Header ======= -->
<%- include('../layout/headerNavAdmin.ejs') %>
<%- include('../layout/slidebar.ejs') %>

<section id="main" class="main" style="
  border-radius: 0px;
  height: fit-content;
">
  <div class="container-fluid h-100">
    <div class="row d-flex justify-content-center align-items-center " style="height: fit-content;">
      <div class="col-lg-12 col-xl-11">
        <div class="card bg-light text-dark border-0 rounded-3 shadow-lg">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1" style="height: fit-content;">
                <h1 class="text-center fw-bold mb-5 mx-1 mx-md-4 mt-4">Categories</h1>

                <div class="table">
                  <table class="table table-bordered table-striped">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Action</th>
                        <th>Status</th>
                        <th>Unlist</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% categories.forEach(category => { %>
                      <tr class="rounded bg-white border">
                        <td><%= category.name %></td>
                        <td>
                          <a class="btn btn-outline-success me-2" href="/admin/editCategory/<%= category._id %>">Edit</a>
                          <a class="btn btn-outline-danger" href="/admin/deleteCategory/<%= category._id %>"
                            onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                        </td>
                        <td><%= category.isListed ? 'Listed' : 'Unlisted' %></td>
                        <td>
                          <% if (category.isListed) { %>
                          <a class="btn btn-warning btn-sm" href="/admin/unlist-category?id=<%= category._id %>">Unlist</a>
                          <% } else { %>
                          <a class="btn btn-success btn-sm" href="/admin/list-category?id=<%= category._id %>">List</a>
                          <% } %>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>

                <div class="text-center">
                  <a class="btn btn-primary btn-sm" href="/admin/addCategory">Add Category</a>
                </div>

              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layout/adminNewFooter.ejs') %>

<style>
  .main {
    background-color: #f5f5f5;
    padding: 50px 0;
  }

  .card {
    border-radius: 20px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  }

  h1 {
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 30px;
  }

  table {
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
    font-size: 16px;
  }

  th,
  td {
    padding: 15px;
  }

  th {
    background-color: #f5f5f5;
    font-weight: bold;
    text-align: center;
  }

  td {
    text-align: left;
  }

  .btn {
    border-radius: 5px;
    font-size: 14px;
    font-weight: bold;
    padding: 10px 20px;
    text-transform: uppercase;
  }

  .btn-outline-success {
    border-color: #28a745;
    color: #28a745;
  }

  .btn-outline-danger {
    border-color: #dc3545;
    color: #dc3545;
  }

  .btn-outline-success:hover,
  .btn-outline-danger:hover {
    opacity: 0.8;
  }

  .btn-warning {
    background-color: #ffc107;
    border-color: #ffc107;
    color: #fff;
  }

  .btn-success {
    background-color: #28a745;
    border-color: #28a745;
    color: #fff;
  }

  .btn-warning:hover,
  .btn-success:hover {
    opacity: 0.8;
  }
</style>