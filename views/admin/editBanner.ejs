
<%- include('../layout/adminNewHEader.ejs') %>
  <!-- ======= Header ======= -->
   <%- include('../layout/headerNavAdmin.ejs') %>

  <%- include('../layout/slidebar.ejs') %>

<section id="main" class="main" style="border-radius: 0px; height: fit-content;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card_s text-black" style="border-radius: 8px 8px 8px 100px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <div class="card_s p-2 text-center">
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Banner</p>
                  <form method="POST" action="/admin/edit/<%= banner._id %>" enctype="multipart/form-data">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" value="<%= banner.title %>" required>
                    <br><br>
                    <label for="image">Image:</label>
                    <input type="file" id="image" name="image" accept="image/*">
                    <br><br>
                    <label for="link">Link:</label>
                    <input type="text" id="link" name="link" value="<%= banner.link %>" required>
                    <br><br>
                    <button type="submit" style="background-color: brown;">Save Changes</button>
                  </form>
                  <br>
                  <a class="btn btn-success btn-sm" href="/admin/banners">Back to Banners</a>
                  <p>
                    <% 
                       if(typeof msg !== 'undefined'){
                    %>
                    <p style="color:green"><%= msg %></p>
                    <%
                       }
                       %>
                  </p>
                </div>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2" style="background: linear-gradient(180deg, #F2D184 0%, rgba(242, 209, 132, 0) 100%)">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid image-verify" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layout/adminNewFooter.ejs') %>
