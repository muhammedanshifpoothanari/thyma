
<%- include('../layout/adminNewHEader.ejs') %>
  <!-- ======= Header ======= -->
   <%- include('../layout/headerNavAdmin.ejs') %>

  <%- include('../layout/slidebar.ejs') %>
<div class="container mt-5 main" id="main" >


    <table class="table table-borderless main">
<thead>
<tr class="head">
  <th scope="col" class="ml-2">
      
      <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">

       </div>

  </th>
  <th scope="col">Order ID</th>
  
  <th scope="col">Customer</th>
  <th scope="col">Fullfillment</th>
  <th scope="col">Total</th>
  <th scope="col">Status</th>
  <th scope="col">Edit</th>
  <th scope="col">Edit</th>
</tr>
</thead>
<tbody>

    <% orders.forEach(order => { %>
<tr class="rounded bg-white">
  <th scope="row">
       <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">

       </div>
  </th>
  <td class="order-color"><a href="/admin/orderDetails?id=<%= order._id %>"><%= order._id %></a></td>
  
  
  
  <td class="d-flex align-items-center">
      <img src="https://i.imgur.com/C4egmYM.jpg" class="rounded-circle" width="25">
      <span class="ml-2"><%= order.ref %></span>
  </td>
  <td>
      <div class="dropdown">
<button class="btn btn-primary btn-sm" type="button"  >
    <li><%= order.deliveryStatus %></li>
</button>

</div>
  </td>
  <td><%= order.total %></td>
  
  <td>
       <div class="dropdown">
<button class="btn btn-primary btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
    <%= order.paymentStatus %>
</button>

</div>
  </td>
   <td class="border">  <% if (order.deliveryStatus==='delivered') { %>
    <span>already delivered</span>
  <% } else { %>
    <a class="btn btn-warning btn-sm "href="/admin/list-order?id=<%= order._id %>">delivered</a>
  <% } %></td>
</td>
<td class="border">  <% if (order.paymentStatus==='paid') { %>
 <a class="btn btn-warning btn-sm " href="/admin/unlist-orders?id=<%= order._id %>">unpaid</a>
<% } else { %>
 <a class="btn btn-warning btn-sm "href="/admin/list-orders?id=<%= order._id %>">paid</a>
<% } %></td>
  

</tr>

<% }) %>
</tbody>
</table>
    

</div>
<%- include('../layout/adminNewFooter.ejs') %>